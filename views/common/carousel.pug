mixin carousel(title)
  #myCarousel.carousel.slide(data-ride='carousel')
    // Indicators
    ol.carousel-indicators
      li.active(data-target='#myCarousel' data-slide-to='0' class="active")
      li(data-target='#myCarousel' data-slide-to='1')
      li(data-target='#myCarousel' data-slide-to='2')
      li(data-target='#myCarousel' data-slide-to='3')
    // Wrapper for slides
    .carousel-inner(role='listbox')
      .item.active
        img(src='images/slide1.jpg' alt='Chania' width='460' height='345')
        .carousel-caption
          h2 Welcome to Accenture's Page
          p Where potential meets passion
      .item
        img(src='images/slide2.jpg' alt='Chania' width='460' height='345')
        .carousel-caption
          h2 Sign Up Now!
          a.btn.btn-outline-warning.btn-lg.btn-block(href='/users/signup' role='button') Sign Up now!
      .item
        img(src='images/slide3.jpg' alt='Flower' width='460' height='345')
        .carousel-caption
          h3 Flowers
          p Beautiful flowers in Kolymbari, Crete.
      .item
        img(src='images/slide4.jpg' alt='Flower' width='460' height='345')
        .carousel-caption
          h3 Flowers
          p Beautiful flowers in Kolymbari, Crete.
  // Left and right controls
  a.left.carousel-control(href='#myCarousel' role='button' data-slide='prev')
    span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
    span.sr-only Previous
  a.right.carousel-control(href='#myCarousel' role='button' data-slide='next')
    span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
    span.sr-only Next