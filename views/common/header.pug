        script(src="/tinymce/js/tinymce/tinymce.min.js")

        script.
            tinymce.init({
                selector: '#content',
                inline:  false,
                toolbar: 'bold,italic,underline,|,undo,redo,|,justifyleft,justifycenter,justifyright|,image,table,|,fullscreen, codesample, code,|,alignleft aligncenter alignright alignjustify',
                a_plugin_option: false,
                menubar: false,
                height: 216,
                branding: false,
                plugins: "table link image codesample code fullscreen charmap",
                a_configuration_option: 400,
                autosave_interval: "20s",

                relative_urls: false,
                remove_script_host: false,
                images_upload_url: '/upload',
                images_upload_base_path: "http://" + window.location.host
                //- document_base_url: 'http://escgroup1.herokuapp.com/'
            });

        




