mixin navbar(user)
    nav.navbar.navbar-expand.navbar-light.bg-light
      a(href="/", aria-label="Accenture Homepage").navbar-brand.mr-0.mr-md2
        img(src="/images/accenture.png", width="36", height="36")
      .collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item
            a.nav-link(href="/") Home
          li.nav-item
            a.nav-link(href="/tickets") Tickets
          li.nav-item
            a.nav-link(href="/ticket/form") Ask questions
      .navbar-right
        if user
          ul.navbar-nav.mr-auto
            span.navbar-text Hello #{user.firstName}!
            li.nav-item
              a.nav-link(href="/users/logout") Logout
        else
          .navbar-right
            ul.navbar-nav.mr-auto
              li.nav-item
                a.nav-link(href="/users/signup") Sign up
              li.nav-item
                a.nav-link(href="/users/login") Login
          
