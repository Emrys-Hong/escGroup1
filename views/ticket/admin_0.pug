- var count = 1
doctype html
html(lang='en')
  include ../common/header.pug
  +header(title)
  body
    header
      include ../common/navbar.pug
      +navbar(user)
      .container-fluid
        .row.align-items-center
          .col-md-10.order-md-1.text-center.text-md-left
            h1 tickets #{subtitle}
            p
              span
                a#tickets0(href="/tickets/" + user.userId + "/0") Queued #{pre}
                |          |
                a#tickets1(href="/tickets/" + user.userId + "/1") In-Progress #{pre}
                |          |
                a#tickets2(href="/tickets/" + user.userId + "/2") Solved
              table.table
                thread
                tr
                  th(scope="col").mce-arrow-down #
                  th(scope="col") Name
                  th(scope="col") Email
                  th(scope="col") Phone Number
                  th(scope="col") Topic
                  th(scope="col") Description
                  th(scope="col") Dev Responses
                  th(scope="col") Respond
                tr
                tbody
                for ticket in tickets
                  - var ticketPriority;
                  if ticket.priority
                    - ticketPriority = "ticket_priority";
                  else
                    - ticketPriority = "ticket";
                    tr(class=ticketPriority, id=ticket.ticketId)
                      td
                        span #{count++}
                      td
                        span #{ticket.user.firstName + " " + ticket.user.lastName}
                      td
                        span #{ticket.user.email}
                      td
                        span #{ticket.user.phoneNumber}
                      td
                        span #{ticket.topic}  
                      td
                        span#desc!=ticket.messages[0].content
                      td
                        a(href="/ticket/" + user.userId + "/" + ticket.ticketId + "/respond") Respond
                  


    include ../common/footer.pug
    +footer()
