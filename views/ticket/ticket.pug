doctype html
html(lang='en')
  include ../common/header.pug
  +header("Tickets")
  body
    header
      include ../common/navbar.pug
      +navbar()
      .container
        .row.align-items-center
          .col-md-6.order-md-1.text-center.text-md-left.pr-md-5
            h1 tickets
            table.table
              thread
              tr
                th(scope="col") Email
                th(scope="col") Edit
                th(scope="col") Delete
              tr
              tbody
                  tr(id=ticket.id)
                  td
                    span #{ticket.email}
                  td
                    a(href="/ticket/" + ticket.id + "/edit") Edit
                  td
                    form(action="/ticket/" + ticket.id + "/delete", method="POST")
                      button(type="submit").btn.btn-primary Delete


    include ../common/footer.pug
    +footer()
    script(src="/javascripts/tickets.js")


