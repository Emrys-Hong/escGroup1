doctype html
html(lang='en')
  include ../../common/header.pug
  +header(title)
  body
    header
      include ../../common/navbar.pug
      +navbar(user)
      .container
        .row.align-items-center
          .col-md-8.order-md-1.text-center.text-md-left.pr-md-5
            - let topics = ["Python", "C++", "Java", "Go", "Android Studio", "Javascript", "C"];
            h1.display-7.m-b-2 Ticket Form

            // register form
            form(action='/ticket_form/details',method='POST' )
              div.form-group
                label(for='name') First Name:
                input#name.form-control(type='text', placeholder='e.g. David', name='firstName', value=user.firstName, readonly="readonly")
              div.form-group
                label(for='name') Last Name:
                input#name.form-control(type='text', placeholder='e.g. Beckham', name='lastName', value=user.lastName, readonly="readonly")
              div.form-group
                label(for='email') Email:
                input#email.form-control(type='email', placeholder='name@email.com', name='email', value=user.email, readonly="readonly")
              div.form-group
                label(for='phoneNumber') Phone Number:
                input#phoneNumber.form-control(type='text', placeholder='e.g. 91234567' name='phoneNumber', value=user.phoneNumber, readonly="readonly")
              div.form-group
                label(for='priority') Bugs in ACNAPI found?:
                input#priority.form-control(type='checkbox', name='priority')
              div.form-group
                label(for='topic') Topics:
              br
              select(name='topic')
                each topic in topics
                  option#topic.form-control(value=topic) #{topic}
              div.form-group
                label(for='content') Description:
                textarea#content.form-control(name='content')
                 |some sample text
                
              button.btn.btn-outline-dark(type='submit') Submit



    include ../../common/footer.pug
    +footer()
