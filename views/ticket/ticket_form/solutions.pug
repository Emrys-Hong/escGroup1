            //- | 
            //- a(href="/solution_detail?id=" + solution.fifth.id) #{solution.fifth.title}
            
            br
            h5 Solutions not useful?
          
            h6 Click here to submit a ticket.
            a.btn.btn-outline-dark.btn-block(href="/ticket_form/details" role='button') Ticket Submission
            //a#btn_ticket-form.nav-link(href="/ticket_form/details") Next: details
            br
            h6 Click here to ask another question.
            a.btn.btn-outline-dark.btn-block(href="/ticket_form/basics" role='button') Ask Another Question
            //a#btn_ticket-form.nav-link(href="/ticket_form/basics") previous: basics

    include ../../common/footer.pug
    +footer()
